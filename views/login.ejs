<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head.ejs') %>

<body class="details_bg">
    <%- include('./partials/nav.ejs') %>
    <form action="/login" method="POST" enctype="multipart/form-data"
        class="p-5 mt-5 w-50 justify-content-center mx-auto text-light bg_color">
        <div class="text-center mt-3">
            <h2 class="display-4">Admin Login</h2>
        </div>

        <div class="form-group">
            <label for="username"><strong>Admin Username</strong> </label>
            <input type="text" class="form-control" id="username" name="username" required />
        </div>
        <div class="form-group">
            <label for="password"><strong>Password</strong> </label>
            <input type="password" class="form-control" id="password" name="password" required />
            <small id="emailHelp" class="form-text text-muted">Write what you like to...</small>
        </div>

        <div class="form-group">
            <label for="title"><strong>Blog's picture</strong> </label>
            <input type="file" class="form-control-file" id="file" name="file" />
        </div>
        <button type="submit" class="btn btn-danger">Submit</button>
    </form>