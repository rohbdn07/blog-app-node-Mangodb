
<form action="/blogs/:slug/comment" method="POST" 
  class="p-4 mt-5 mb-2 col-lg-5 justify-content-center text-light bg_color container">
  <% if(msg!=''){%>
    <div class="alert bg-danger text-light">
      <p><%=msg%></p>
    </div>
    <%}%>
  <input type="hidden" class="form-control" id="post_id" name="slug"
    />

  <div class="text-center mt-3">
    <h2 class="display-5">Comment on blog</h2>
  </div>

  <div class="form-group">
    <label for="name"><strong> username</strong> </label>
    <input type="text" class="form-control" id="name" name="name" required
    />
  </div>
  <div  class="form-group">
    <label for="content"><strong>Comment</strong></label>
    <textarea class="form-control" type="text" id="content" name="content" rows="3" value="comment"
    required>
    </textarea>
  </div>
  <button type="submit" class="btn btn-danger">Comment</button>
  <hr class="bg-danger">

   
    <div class="text-center text-dark">
      <h1 class="display-3 text-primary my-5 mx-auto"><%=comment.name.toUpperCase()%></h1>
    </div>
     
   
  <div class="text-center text-dark ">
    <h4 class="text-info details__blogContent"><%= comment.comment%></h4>
  </div>
   
</form>



