<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head.ejs') %>

<body>
  <div class="blog_image">
    <img src="/images/blogImage01.jpg" class="img-fluid" alt="blogImage" />
    
  </div>
  <nav class="navbar sticky-top navbar-expand-lg navbar-light nav-color">
    <a class="navbar-brand" href="/"><img src="https://i.imgur.com/Yunghri.png" alt="logo" /></a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
      aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse " id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto  ">
        <li class="nav-item active  ">
          <a class="nav-link " href="/"><strong>Blogs</strong> <span class="sr-only">(current)</span></a>
        </li>
        <li class="nav-item active">
          <a class="nav-link" href="/about"><strong>About Me</strong><span class="sr-only">(current)</span></a>
        </li>
        <% if(loginUser){%>
        <li class="nav-item active">
          <a class="nav-link" href="/blogs/create"><strong>CreateBlog</strong> <span
              class="sr-only">(current)</span></a>
        </li>
        <%}%>
  
        <% if(!loginUser){%>
        <li class="nav-item active">
          <a class="nav-link" href="/login"><strong>AdminLogin</strong> <span class="sr-only">(current)</span></a>
        </li>
        <%}%>
        <!-- <li class="nav-item active">
          <a class="nav-link" href="/register"><strong>Register</strong> <span class="sr-only">(current)</span></a>
        </li> -->
        
        <% if(loginUser){%>
        <li class="nav-item active">
          <a class="nav-link" href="/logout"><strong>LogOut</strong></a>
        </li>
        <%}%>
  
      </ul>
  
      <form action="/search/" class="form-inline my-2 my-lg-0" method="POST">
        <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search" name="search"/>
        <button class="btn btn-outline-success my-2 my-sm-0 mr-5" type="submit">
          Search
        </button>
      </form>
    </div>
  </nav>
  
  <div class="container-fluid d-flex index__bg">

    <div class="m-5 container-fluid">
      <% if(loginUser){%>
        <div class="my-1 py-3 ">
          <h2>Welcome, <%=loginUsername%> </h2><%=loginUser%>
        </div>
        <%}%>

      <h2 class="text-light">All Blogs</h2>
      <br />
        
      <% if (blogs.length > 0) { %> <% blogs.forEach(blog => { %>
  
        <div class="card shadow border border-info rounded index__blogCard mb-5 p-3  " style='width:50rem; height:40rem;'>
          <div class="index__image" style="background-image: url('<%=blog.image %>')"></div>
          
          <h1 class="display-4"><%= blog.title %></h1>
          <p class="lead"><%= blog.description %></p>
          <p>Posted by :<%= blog.username %></p>
          <p>Published at :<%= blog.createdAt.toLocaleDateString() %></p>
          <% if(loginUser) {%>
          <a class="btn btn-danger btn-md" href="/edit/<%=blog.slug %>">Update</a>
          <br>
          <%}%>
        <a class="btn btn-dark btn-md" href="/blogs/<%=blog.slug %>">Read more</a>
          <hr class="my-4" />
        </div>
        <% }) %> <% } else { %>
        <p class="text-light">
          There are no blogs to display... <br />
          Create a new post.
        </p>
        <% } %>
    </div>
  
    <!-- //User Profile..... -->
    <div class="jumbotron container-fluid mr-5 index__profile mt-4 w-25 h-25 media-body">
      <h2 class="text-light">User Profile</h2>
     
        <h3 class="display-4"> Rohit Bhandari</h3>
        <a class="btn btn-dark btn-md" href="#">FACEBOOK</a>
        <a class="btn btn-danger btn-md" href="#">GITHUB</a>
        <hr class="my-4" />
     
    </div>
    </div>
  <%- include('./partials/footer.ejs') %>
</body>


<%- include('./partials/scriptTag.ejs') %>


</html>