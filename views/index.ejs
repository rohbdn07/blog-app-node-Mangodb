<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head.ejs') %>
<div class="blog_image">
  <img src="/images/blogImage01.jpg" class="img-fluid" alt="blogImage" />
</div>

<body class="bg_color">
  <%-include('./partials/nav.ejs') %>


  <div class="bg_image ">
    <br>
    <h2>All Blogs</h2>
    <div class="jumbotron mt-5 m-5 ">
      <% if (blogs.length > 0) { %> <% blogs.forEach(blog => { %>
      <div class="shadow p-3 mb-5  border border-info rounded text-dark ">
        <h1 class="display-4"><%= blog.title %></h1>

        <p class="lead"><%= blog.description %></p>
        <p class="lead"> Posted By :<%= blog.username %></p>
        <p class="lead"> Published at :<%= blog.createdAt %></p>



        <a class="btn btn-dark btn-md" href="/blogs/<%=blog._id %>">Read more</a>
        <a class="btn btn-danger btn-md" href="/edit/<%=blog._id %>">Update</a>
        <hr class="my-4">
      </div>
      <% }) %> <% } else { %>
      <p>There are no blogs to display... <br> Create a new post.</p>
      <% } %>
    </div>

    <%- include('./partials/footer.ejs') %>
</body>

<%- include('./partials/scriptTag.ejs') %>
<script>
  const moment = require("moment");
</script>

</html>