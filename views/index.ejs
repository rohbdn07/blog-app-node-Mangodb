<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head.ejs') %>
<div class="blog_image">
  <img src="/images/blogImage01.jpg" class="img-fluid" alt="blogImage" />
</div>
<%-include('./partials/nav.ejs') %>

<body>
  <div class=" bg_color container-fluid d-flex">

    <div class="m-5 container-fluid">
      <h2 class="text-light">All Blogs</h2>
      <br />
      <% if (blogs.length > 0) { %> <% blogs.forEach(blog => { %>
      <div class="card shadow border border-info rounded text-dark mb-5 p-3" style='width:50rem; height:40rem;'>
        <div class="index__image" style="background-image: url('<%=blog.image %>')"></div>
        <h1 class="display-4"><%= blog.title %></h1>

        <p class="lead"><%= blog.description %></p>
        <p class="lead">Posted By :<%= blog.username %></p>
        <p class="lead">Published at :<%= blog.createdAt %></p>
        <a class="btn btn-dark btn-md" href="/blogs/<%=blog._id %>">Read more</a>
        <br>
        <a class="btn btn-danger btn-md" href="/edit/<%=blog._id %>">Update</a>
        <hr class="my-4" />
      </div>
      <% }) %> <% } else { %>
      <p class="text-dark">
        There are no blogs to display... <br />
        Create a new post.
      </p>
      <% } %>
    </div>
    <!-- //User Profile..... -->
    <div class="jumbotron mr-5 mt-5 w-25 h-25">
      <h2 class="text-dark">User Profile</h2>
      <br />
      <div class="shadow p-3 mb-5 border border-info rounded text-dark">
        <h1 class="display-4"><%=blogs.username %></h1>

        <p class="lead"><%= blogs[0].username %></p>
        <a class="btn btn-dark btn-md" href="#">FACEBOOK</a>
        <a class="btn btn-danger btn-md" href="#">GITHUB</a>
        <hr class="my-4" />
      </div>
    </div>
  </div>
  <%- include('./partials/footer.ejs') %>
</body>


<%- include('./partials/scriptTag.ejs') %>

<script>
  const moment = require("moment");
</script>

</html>